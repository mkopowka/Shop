@model Shop.Models.Product

@{
    ViewBag.Title = "Usuń produkt";
}

<h2>Czy na pewno chcesz  usunąć ten produkt?</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dd>
            <img src="~/Resources/@Model.Photo" alt="Zdj" height="300" width="250" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Usuń" class="btn btn-primary btn-large" /> <br /><br />
                @Html.ActionLink("Powrót", "Index", null, new { @class = "btn btn-primary btn-large" })
            </div>
        </div>
    }
</div>
