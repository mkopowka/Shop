@model IEnumerable<Shop.Models.QuantityWarehouse>

@{
    ViewBag.Title = "Stany Magazynów";
}

<h2>Stany Magazynów</h2>

<p>
    @Html.ActionLink("Dodaj produkt do magazynu", "Create", null, new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <td>
            <b>@Html.DisplayNameFor(model => model.Quantity)</b> 
        </td>
        <th>
            @Html.DisplayNameFor(model => model.Warehouse.City)
        </th>
        <th>
            Nazwa Produktu
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Warehouse.City) 
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>

        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) 
            @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) 
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
