@model IEnumerable<Shop.Models.Warehouse>

@{
    ViewBag.Title = "Warehouses";
}

<h2>Warehouses</h2>

    <ul id="warelist">
          <li >@Html.ActionLink("Add Warehouse ", "Create", null, new { @class = "btn btn-primary btn-large" })</li>
          <li>@Html.ActionLink("Warehouses", "Index", "QuantityWarehouses", null, new { @class = "btn btn-primary btn-large" })</li>
    </ul>
<p>

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.BuildingNumber)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Voivodeship)
        </th>

        <th>
            Options
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>

            <td>
                @Html.ActionLink(item.City, "Details", new { @id = item.Id })
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BuildingNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Voivodeship)
            </td>

            <td>

                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>

        </tr>
    }

</table>

